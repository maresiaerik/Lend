<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeStatisticsFragment">

    <include layout="@layout/page_title_layout" />


    <Button
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calendar"
        android:layout_marginRight="5dp"
        android:id="@+id/home_calendar"
        android:background="@drawable/button_accent_action"
        android:padding="5dp"
        android:textColor="@drawable/button_accent_action"
        />

   <GridLayout
       app:layout_constraintLeft_toLeftOf="parent"
       android:layout_marginTop="100dp"
       android:padding="10dp"
       app:layout_constraintTop_toBottomOf="@id/home_calendar"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:columnCount="2"
       android:rowCount="3">
       <!-- Row 1 -->
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_row="0"
           android:padding="5dp"

           android:text="Times borrowed"
           android:layout_column="0"
           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_row="0"
           android:id="@+id/lendz_count"
           android:layout_gravity="center"
           android:text="0"
           android:padding="5dp"
           android:layout_column="1"
           />

       <!-- Row 2 -->
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_row="1"
           android:padding="5dp"
           android:text="Average borrow time (days)"
           android:layout_column="0"
           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_row="1"
           android:text="0"
           android:id="@+id/lendz_average"
           android:padding="5dp"
           android:layout_gravity="center"
           android:layout_column="1"
           />

       <!-- Row 3 -->
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_row="2"
           android:padding="5dp"
           android:text="Total revenue (â‚¬)"
           android:layout_column="0"
           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_row="2"
           android:layout_gravity="center"
           android:padding="5dp"
           android:text="0"
           android:id="@+id/lendz_revenue"
           android:layout_column="1"
           />

   </GridLayout>

</android.support.constraint.ConstraintLayout>